# Application configuration
APP_URL=http://localhost:3000

# OpenWeatherMap API
# Sign up at https://openweathermap.org/api to get your API key
# This is required for fetching weather data for any city
OPENWEATHER_API_KEY=your_openweather_api_key

# Gemini API
# Get your API key from https://ai.google.dev/ (Google AI Studio)
# This is used for generating personalized weather updates and motivational content
GEMINI_API_KEY=your_gemini_api_key

# ElevenLabs API
# Sign up at https://elevenlabs.io/ to get an API key
# This is used for converting text to realistic speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key
# Optional: Voice ID for your preferred voice
# Default is "EXAVITQu4vr4xnSDxMaL" (Rachel voice)
# Find more voice IDs at https://api.elevenlabs.io/v1/voices
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Telegram Bot
# Create a bot using @BotFather on Telegram and get the token
# This is required if you want to deliver voice notes via Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_API_URL=https://api.telegram.org

# Email settings (for Gmail)
# For Gmail, you need to use an App Password if you have 2FA enabled
# Go to https://myaccount.google.com/apppasswords to generate one
EMAIL_USER=your_email_username
EMAIL_PASS=your_email_app_password
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587

# Twilio Delivery
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number 