# Application configuration
APP_URL=http://localhost:3000

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweather_api_key

# Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Google Cloud TTS API
# Path to the Google Cloud credentials JSON file
# Create a service account with Text-to-Speech API access permissions
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Telegram Bot
# Create a bot using @BotFather on Telegram and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Email settings (for Gmail)
# For Gmail, you might need to use an App Password if you have 2FA enabled
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=your_gmail_app_password 